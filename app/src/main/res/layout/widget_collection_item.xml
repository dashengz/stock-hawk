<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/touch_selector_dark"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:padding="@dimen/widget_margin">


    <TextView
        android:id="@+id/stock_symbol"
        style="@style/StockSymbolTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/widget_component_margin"
        android:gravity="start|center_vertical"
        tools:text="@string/placeholder_goog" />

    <TextView
        android:id="@+id/change"
        style="@style/PercentChangeTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="@dimen/widget_component_margin"
        android:background="@drawable/percent_change_pill"
        android:paddingEnd="@dimen/widget_component_margin"
        android:paddingLeft="@dimen/widget_component_margin"
        android:paddingRight="@dimen/widget_component_margin"
        android:paddingStart="@dimen/widget_component_margin"
        tools:text="@string/placeholder_percentage" />

</FrameLayout>